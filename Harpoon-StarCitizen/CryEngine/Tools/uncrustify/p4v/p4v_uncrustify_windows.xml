<?xml version="1.0" encoding="UTF-8"?>
<!--perforce-xml-version=1.0-->
<CustomToolDefList varName="customtooldeflist">
 <CustomToolFolder>
  <Name>Format Code</Name>
  <CustomToolDefList>
   <CustomToolDef>
    <Definition>
     <Name>Uncrustify: format files</Name>
     <Command>cmd</Command>
     <Arguments>/c $r/Code/Tools/uncrustify/p4v/p4v_uncrustify.exe --apply --user=$u --client=$c %F</Arguments>
    </Definition>
    <Console>
     <CloseOnExit>false</CloseOnExit>
    </Console>
    <AddToContext>true</AddToContext>
    <Refresh>true</Refresh>
   </CustomToolDef>
   <CustomToolDef>
    <Definition>
     <Name>Uncrustify: validate files</Name>
     <Command>cmd</Command>
     <Arguments>/c $r/Code/Tools/uncrustify/p4v/p4v_uncrustify.exe --user=$u --client=$c %F</Arguments>
    </Definition>
    <Console>
     <CloseOnExit>false</CloseOnExit>
    </Console>
    <AddToContext>true</AddToContext>
    <Refresh>true</Refresh>
   </CustomToolDef>
   <CustomToolDef>
    <Definition>
     <Name>Uncrustify: format changelist</Name>
     <Command>cmd</Command>
     <Arguments>/c $r/Code/Tools/uncrustify/p4v/p4v_uncrustify.exe --apply --user=$u --client=$c --changelist %P</Arguments>
    </Definition>
    <Console>
     <CloseOnExit>false</CloseOnExit>
    </Console>
    <AddToContext>true</AddToContext>
    <Refresh>true</Refresh>
   </CustomToolDef>
   <CustomToolDef>
    <Definition>
     <Name>Uncrustify: validate changelist</Name>
     <Command>cmd</Command>
     <Arguments>/c $r/Code/Tools/uncrustify/p4v/p4v_uncrustify.exe --user=$u --client=$c --changelist %P</Arguments>
    </Definition>
    <Console>
     <CloseOnExit>false</CloseOnExit>
    </Console>
    <AddToContext>true</AddToContext>
    <Refresh>true</Refresh>
   </CustomToolDef>
  </CustomToolDefList>
 </CustomToolFolder>
</CustomToolDefList>
